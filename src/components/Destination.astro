---
import { GetDestinos } from '../lib/db.js';
import type { Tour } from '../types/tours.js';
const tours:Tour[] = await GetDestinos();

---
<section class="p-4">
    <h1 class="text-2xl font-bold">Destinos populares</h1>
    <div class="flex gap-3 py-5">
        {
            tours.map((tour:any) => (
                <a href="#" class="w-[928px] duration-200 transform transition hover:scale-105" aria-label={`Tour en ${tour.name}`}>
                    <img src={`img/${tour.img}`} class="w-full h-auto rounded-xl hover:shadow-xl" alt={`Tour en ${tour.name}`}>
                    <p class="mt-2 text-lg">{tour.name}</p>
                    <p>{tour.status }</p>
                </a>
                )
            )
        }
    </div>
</section>