<section class="flex justify-center items-center h-full">
  <form action="" class="flex flex-col gap-4 p-6 max-w-sm w-full shadow-2xl rounded" aria-labelledby="form-title">
    <h1 id="form-title" class="text-xl font-bold text-center">
      Better With a Teacher
    </h1>
    <div class="flex flex-col">
      <label for="username" class="mb-1">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="p-2 bg-fondo-place rounded focus:outline-none focus:ring-2 focus:ring-text-place"
        autocomplete="email"
      />
    </div>

    <div class="flex flex-col">
      <label for="pass" class="mb-1">ContraseÃ±a:</label>
